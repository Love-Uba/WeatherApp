<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <ImageView
        android:id="@+id/weather_Iv"
        android:layout_width="24dp"
        android:layout_height="24dp"
        android:src="@drawable/ic_today"
        android:layout_margin="8dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/days_Tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Fri"
        android:layout_margin="16dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toEndOf="@+id/weather_Iv"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/temp_rangeTv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="35/34"
        android:layout_margin="16dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toEndOf="@+id/days_Tv"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/weather_summaryTv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAlignment="viewStart"
        android:ellipsize="end"
        android:maxLines="1"
        android:layout_marginEnd="10dp"
        android:text="Mostly cloudy with a fair amount of Sun"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>